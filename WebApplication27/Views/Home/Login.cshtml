
@{
    ViewBag.Title = "Login";
}


<h2>登入帳戶</h2>
<form action="@Url.Action("Login")" method=post>
    <div class="form-horizontal">
        <div class="form-group">
            <span class="control-label col-md-2">帳號</span>
            <div class="col-md-10" />
            <input type="text" id="demodname" name="demodname" required class="form-control" />
        </div>
    </div>
    <div class="form-horizontal">
        <div class="form-group">
            <span class="control-label col-md-2">密碼</span>
            <div class="col-md-10" />
            <input type="password" id="demopassword" name="demopassword" required class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="登入" class="btn btn-default" />
            @ViewBag.message
        </div>
    </div>
</form>